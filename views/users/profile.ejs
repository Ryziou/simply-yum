<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/main.css">
    <title>
        <%= profileUser.username %> | Simply Yum
    </title>
</head>

<body>
    <%- include('../partials/nav.ejs') %>
        <main class="profile">
            <img src="<%= profileUser.avatar %>" alt="<%= profileUser.username %>'s profile image" width="300">
            <h1 class="text-center">
                <%= profileUser.username %>
            </h1>

            <section class="createdRecipes">
                <h2>Created Recipes:</h2>
                <% createdRecipes.forEach(recipe => { %>
                 <li>
                    <a href="/recipes/<%= recipe._id %>">
                        <%= recipe.title %>
                    </a>
                 </li>
                <% }) %>
            </section>

            <section class="favouriteRecipes">
                <h2> Favourited Recipes:</h2>
                <% favRecipes.forEach(fav => { %>
                    <li>
                       <a href="/recipes/<%= fav._id %>">
                           <%= fav.title %>
                       </a>
                    </li>
                   <% }) %>
            </section>
        </main>
</body>

</html>